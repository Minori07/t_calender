<div class="top">
  <div class="icon"><%= image_tag "top_icon.png" %></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,style: "background-color: white;border-radius: 5px;margin-bottom: 10px;color:gray;" %>
  </div>

  <div class="field">
    チーム名<br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" ,style: "background-color: white;border-radius: 5px;margin-bottom: 20px;color:gray;" %>
  </div>

  <div class="field">
    パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,style: "background-color: white;border-radius: 5px;margin-bottom: 5px;color:gray;" %>
  </div>

  <div class="field">
    パスワード（確認）<br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,style: "background-color: white;border-radius: 5px;margin-bottom: 10px;color:gray;" %>
  </div>

  <div class="actions">
    <%= f.submit "作成する" ,style: "background-color: white; color: #66cdaa; margin: 10px;padding: 2px 5px; border-radius: 10px;"%>
  </div>
<% end %>

<%= link_to 'チームに参加', new_user_session_path %>
<%= link_to 'Topページ', home_index_path %>
</div>