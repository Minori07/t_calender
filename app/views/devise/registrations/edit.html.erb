<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<header>
  <ul>
  <li><%= link_to image_tag('left.png'), members_cfg_path %></li>
  <li>チーム情報</li>
</header>

<div class="container">
  <%= devise_error_messages! %>

   <div class="user">
    <p>▶︎ チーム名
    <%= f.text_field :username, autofocus: true, autocomplete: "username" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
    </p>

  <p>
    ▶︎ <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
  </p>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <p>
    ▶︎ パスワード<em>(変えない場合は空白)</em><br />
    <em>※<%= @minimum_password_length %> 文字以上</em><br />
    <%= f.password_field :password, autocomplete: "off",style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </p>

  <p>
    ▶︎ パスワード<em>(確認)</em><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
  </p>

  <p>
    ▶︎ <em>(変更するには現在のPaswwordを入力してください)</em><br />
    <%= f.password_field :current_password, autocomplete: "off" ,style: "background-color: white; border: 1px solid lightgray; border-radius: 5px;"%>
  </p>
</div>

<div class="join"><%= f.submit '変更する'%></div>
<!-- <h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
 -->
</div>
<% end %>